#!/usr/bin/env python3

import pymongo

# MongoDB connection details
MONGODB_HOST = 'localhost'
MONGODB_PORT = 27017

# New database and collection names
DB_NAME = 'everwrite'
USERS_COLLECTION = 'users'
NOTES_COLLECTION = 'notes'

# Connect to MongoDB
client = pymongo.MongoClient(MONGODB_HOST, MONGODB_PORT, username='root', password='passwd')

# Get new database reference 
db = client[DB_NAME]
db.create_collection(USERS_COLLECTION)
db.create_collection(NOTES_COLLECTION)
